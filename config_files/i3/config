include $HOME/.config/i3/workspace.conf
include $HOME/.config/i3/theme.conf 
include $HOME/.config/i3/keybind.conf 

set $mod Mod4
set $alt Mod1

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3 

# Startup Polybar
exec_always --no-startup-id polybar space &
exec_always --no-startup-id polybar bottom_space &
exec_always --no-startup-id polybar bottom &
exec_always --no-startup-id polybar title &
exec_always --no-startup-id polybar center &
exec_always --no-startup-id polybar center_right &
exec_always --no-startup-id polybar right &

# Polybar on lower layer need to run after cause of using wm-stack in polybar
exec_always --no-startup-id sh -c "sleep 0.5 && polybar bottom_border &"
exec_always --no-startup-id sh -c "sleep 0.5 && polybar left &"

# Startup other Apps
exec_always --no-startup-id feh --bg-center ~/.config/i3/wallpapers/Mojave_Express.jpg
exec_always --no-startup-id picom -b
exec_always --no-startup-id buckle

# eye-care using redshift if auto location not work you can just add LAT:LON as argument like below
# exec_always --no-startup-id redshift -l 10.00:69.00

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	mode hide
    	hidden_state hide
    	modifier none
}
